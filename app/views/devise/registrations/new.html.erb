<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="field">
      <%=h f.label :first_name %> <br/>
      <%=h f.text_field :first_name %>
    </div>
    <div class="field">
      <%=h f.label :last_name%> <br/>
      <%=h f.text_field :last_name %>
    </div>
    <div class="field">
      <%=h f.label :profile_name%> <br/>
      <%=h f.text_field :profile_name%>
    </div>
  <div class="field">
    <%=h f.label :email %><br />
    <%=h f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%=h f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%=h f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%=h f.label :password_confirmation %><br />
    <%=h f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%=h f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
